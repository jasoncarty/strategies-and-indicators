# Test Environment Variables
# This file sets environment variables for testing

# Project and Container Naming
COMPOSE_PROJECT_NAME=trading_test
CONTAINER_PREFIX=trading_test

# Profiles
COMPOSE_PROFILES=mysql,analytics,ml_service,ml_models_init

# Database Configuration
DB_HOST=mysql
DB_PORT=3308
DB_NAME=test_breakout_analytics
DB_USER=test_user
DB_PASSWORD=test_password_2024
MYSQL_ROOT_PASSWORD=test_root_2024

# Service Ports (different from development to avoid conflicts)
ANALYTICS_PORT=5008
ML_SERVICE_PORT=5009

# Urls
# For Docker containers (internal communication within Docker network)
ANALYTICS_INTERNAL_URL=http://analytics:${ANALYTICS_PORT}
ML_SERVICE_INTERNAL_URL=http://ml_service:${ML_SERVICE_PORT}

# For external access (tests, development, production)
ANALYTICS_EXTERNAL_URL=http://localhost:${ANALYTICS_PORT}
ML_SERVICE_EXTERNAL_URL=http://localhost:${ML_SERVICE_PORT}

# Environment
ENVIRONMENT=testing

# MySQL Initialization Script
MYSQL_INIT_SCRIPT=init_test.sql

# Use separate volume for testing
MYSQL_DATA_VOLUME=test_mysql_data

# Models
ML_MODELS_DIR=/app/ml_models

# ML prodiction confidence thresholds
THRESHOLD_CRITICAL=0.5
THRESHOLD_WARNING=0.4
THRESHOLD_NORMAL=0.3

# Timezone configuration
TZ=Europe/Stockholm

# Docker Environment Configuration
# Copy this file to docker.env and fill in your actual values
# This file is specifically for Docker Compose configuration

# Environment
ENVIRONMENT=development

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=breakout_analytics
DB_USER=breakout_user
DB_PASSWORD=breakout_password_2024
MYSQL_ROOT_PASSWORD=breakout_root_2024

# Service Ports (Host ports for port mapping)
ANALYTICS_PORT=5004
ML_SERVICE_PORT=5005
REDIS_PORT=6379
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Service Workers
ANALYTICS_WORKERS=1
ML_SERVICE_WORKERS=1

# ML Configuration
ML_MODELS_DIR=ML_Webserver/ml_models

# Logging
LOG_LEVEL=INFO
ANALYTICS_LOG_PATH=logs/analytics.log
ML_SERVICE_LOG_PATH=logs/ml_service.log
WEBSERVER_LOG_PATH=logs/webserver.log
GENERAL_LOG_PATH=logs/general.log

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here
CORS_ORIGINS=["http://localhost:3000"]

# API Configuration
API_RATE_LIMIT=100

# Docker Network Configuration
DOCKER_NETWORK_NAME=trading_network

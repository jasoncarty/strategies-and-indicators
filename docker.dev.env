# Development Environment Variables
# This file sets environment variables for development

# Project and Container Naming
COMPOSE_PROJECT_NAME=trading_dev
CONTAINER_PREFIX=trading_dev

# Profiles
COMPOSE_PROFILES=mysql,analytics,ml_service,nginx,dashboard,retraining,ml_models_init

# Database Configuration
DB_HOST=mysql
DB_PORT=3307
DB_NAME=breakout_analytics
DB_USER=breakout_user
DB_PASSWORD=breakout_password_2024
MYSQL_ROOT_PASSWORD=breakout_root_2024

# Service Ports
ANALYTICS_PORT=5004
ML_SERVICE_PORT=5005
DASHBOARD_PORT=3010
RETRAINING_PORT=5010

# Urls
# For Docker containers (internal communication within Docker network)
ANALYTICS_INTERNAL_URL=http://analytics:${ANALYTICS_PORT}
ML_SERVICE_INTERNAL_URL=http://ml_service:${ML_SERVICE_PORT}
DASHBOARD_INTERNAL_URL=http://dashboard:${DASHBOARD_PORT}
RETRAINING_INTERNAL_URL=http://retraining:${RETRAINING_PORT}

# For external access (tests, development, production)
ANALYTICS_EXTERNAL_URL=http://localhost:${ANALYTICS_PORT}
ML_SERVICE_EXTERNAL_URL=http://localhost:${ML_SERVICE_PORT}
DASHBOARD_EXTERNAL_URL=http://localhost:${DASHBOARD_PORT}
RETRAINING_EXTERNAL_URL=http://localhost:${RETRAINING_PORT}

# Environment
ENVIRONMENT=development

# MySQL Initialization Script
MYSQL_INIT_SCRIPT=init.sql

# Models
ML_MODELS_DIR=/app/ml_models

# ML prodiction confidence thresholds
THRESHOLD_CRITICAL=0.5
THRESHOLD_WARNING=0.4
THRESHOLD_NORMAL=0.3

# Timezone configuration
TZ=Europe/Stockholm

# Risk management
RISK_PER_TRADE_PERCENT=0.01
MAX_RISK_PER_TRADE_PERCENT=0.015
MAX_TOTAL_RISK_PERCENT=0.08
MAX_DRAWDOWN_PERCENT=0.20
MAX_DAILY_LOSS_PERCENT=0.05
MAX_TOTAL_POSITIONS=40
MAX_POSITIONS_PER_DIRECTION=4
MAX_POSITIONS_PER_SYMBOL=2
MAX_CORRELATION_THRESHOLD=0.7
RISK_FREE_RATE=0.02
RISK_LOOKBACK_PERIOD=20

